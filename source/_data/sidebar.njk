{# Hitokoto #}

<div class="hitokoto">
  <div class="hitokoto-title">
    <i class="fas fa-quote-left"></i>
    <b>一言</b>
  </div>

  <div id="hitokoto-text">
    <i class="fa fa-circle-notch fa-spin fa-fw"></i>
  </div>
  <i id="hitokoto-from"></i>

  <script src="https://cdn.jsdelivr.net/npm/bluebird/js/browser/bluebird.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/whatwg-fetch/fetch.min.js"></script>
  <script>
    fetch('https://v1.hitokoto.cn')
      .then(function(res) {
        return res.json();
      })
      .then(function(data) {
        var hitokoto = document.getElementById('hitokoto-text');
        hitokoto.innerText = '　　' + data.hitokoto;
        var hitofrom = document.getElementById('hitokoto-from');
        hitofrom.innerText = "——" + data.from + '\xa0';
      })
      .catch(function(err) {
        console.error(err);
      })
  </script>
</div>
